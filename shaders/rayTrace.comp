#version 460
layout(local_size_x = 8, local_size_y = 8) in;

// matches your descriptor: set=0, binding=0 is a storage image
layout(rgba16f, binding = 0) uniform image2D outImage;

void main() {
    ivec2 pix = ivec2(gl_GlobalInvocationID.xy);
    vec2 uv = vec2(pix);
    vec3 color = vec3(1, uv.y * 0.002, uv.x * 0.002);
    imageStore(outImage, pix, vec4(color, 1.0));
}
